<div class="main-container">
       
        <div class="main-articles">
                {{!-- <h2>Articles</h2> --}}
                {{#each article}}
                <div class="articles">

                        <h3>{{title}}</h3>
                        <p>{{body}}</p>
                        <a href={{link}} target="_blank">{{link}}</a>
                        <div class="buttons">
                                <button id="save" class="save-news" data-id={{this._id}} type="submit">Save Article</button>
                        </div>
                </div>

                {{/each}}
        </div>
</div>